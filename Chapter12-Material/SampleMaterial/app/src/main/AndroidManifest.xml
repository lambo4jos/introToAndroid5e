<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.introtoandroid.samplematerial" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SampleMaterialActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.introtoandroid.samplematerial.TransitionEditActivity"
            android:label="@string/title_activity_transition_edit"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".SampleMaterialActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SampleMaterialActivity" />
        </activity>
        <activity
            android:name="com.introtoandroid.samplematerial.TransitionAddActivity"
            android:label="@string/title_activity_transition_add"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".SampleMaterialActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SampleMaterialActivity" />
        </activity>
    </application>

</manifest>
